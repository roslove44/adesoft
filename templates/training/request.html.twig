{% extends 'base.html.twig' %}

{% block title %}S'inscrire à une formation{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="{{path('app_main')}}">Accueil</a></li>
                <li>Formations</li>
            </ol>
            <h2>S'inscrire à une formation</h2>

        </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <div class="section-title pb-1">
                <h2>S'inscrire</h2>
                <p></p>
            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-12">
                    <div class="portfolio-details pt-1">
                        <div class="portfolio-info">
                            <h3>Préparation à la certification ITIL</h3>
                            <div class="row">
                                <div class="col-lg-6">
                                    <p>
                                        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quos, cumque?
                                    </p>
                                    <ul>
                                        <li><strong>Lieu de Formation</strong>: HOTEL Radisson Blu</li>
                                        <li><strong>Période de formation</strong>: 01 March, 2020 au 13 June, 2020</li>
                                        <li><strong>Pass</strong>: <a href="#" class="fw-bolder">1.000.000 FCFA</a></li>
                                    </ul>
                                </div>

                                <div class="col-lg-6">
                                    {{form_start(trainingRequestForm)}}
                                    <div class="php-email-form p-0 shadow-none">
                                        <div class="row">
                                            <div class="col-lg-6 form-group">
                                                {{form_widget(trainingRequestForm.name)}}
                                            </div>
                                            <div class="col-lg-6 form-group">
                                                {{form_widget(trainingRequestForm.tel)}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{form_widget(trainingRequestForm.email)}}
                                        </div>
                                        <div class="text-center"><button type="submit">S'inscrire</button></div>
                                    </div>
                                    {{form_end(trainingRequestForm)}}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- End Contact Section -->

</main><!-- End #main -->
{% endblock %}