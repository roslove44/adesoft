{% extends 'admin.html.twig' %}

{% block body %}
<!--Container Main start-->
<div class="container-fluid mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h4>Liste des inscrits à la Newsletter</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <th>N°</th>
                        <th>Email</th>
                    </thead>
                    <tbody>
                        {% if newsletters | length == 0 %}
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-secondary">Aucun mail Enregistré</div>
                            </td>
                        </tr>
                        {% endif %}

                        {% for newsletter in newsletters %}
                        <tr>
                            <td>
                                #{{loop.index}}
                            </td>
                            <td>
                                {{newsletter.email}}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}